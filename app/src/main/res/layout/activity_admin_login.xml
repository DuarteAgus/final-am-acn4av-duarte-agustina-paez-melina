<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLoginActivity">

    <ImageView
        android:id="@+id/imgBackgroundAdminLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_pantalla"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/svAdminLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llAdminLoginMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvAdminLoginTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingreso administrador"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAdminLoginSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accedé al panel de administración de NuCloud."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etAdminUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Usuario admin (admin@nucloud.com)"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="#AAAAAA"
                android:background="#1F1B3A"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etAdminPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Contraseña admin (admin123)"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#AAAAAA"
                android:background="#1F1B3A"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnAdminLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ingresar como admin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#33FFFFFF" />

            <include
                layout="@layout/footer_nucloud" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
