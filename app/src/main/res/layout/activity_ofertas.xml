<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfertasActivity">

    <ImageView
        android:id="@+id/imgBackgroundOfertas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_pantalla"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/svPlanes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llOfertasMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloOfertas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ElegÃ­ tu plan NuCloud"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="#1F1B3A">

                <TextView
                    android:id="@+id/tvPlanNebulaTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Nebula"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvPlanNebulaPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.999 / mes"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvPlanNebulaDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1080p, 60 FPS, hasta 2 dispositivos."
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnPlanNebula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elegir Nebula"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="#1F1B3A">

                <TextView
                    android:id="@+id/tvPlanQuantumTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Quantum"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvPlanQuantumPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$8.999 / mes"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvPlanQuantumDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1440p, 120 FPS, hasta 3 dispositivos."
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnPlanQuantum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elegir Quantum"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="#1F1B3A">

                <TextView
                    android:id="@+id/tvPlanEclipseTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Eclipse"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvPlanEclipsePrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$11.999 / mes"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvPlanEclipseDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4K HDR, 144 FPS, hasta 4 dispositivos."
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnPlanEclipse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elegir Eclipse"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#33FFFFFF" />

            <include
                layout="@layout/footer_nucloud" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
